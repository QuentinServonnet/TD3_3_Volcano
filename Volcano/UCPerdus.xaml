<UserControl x:Class="Volcano.UCPerdus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#CC000000">

        <Viewbox Stretch="Uniform">
            <Border Width="400" Height="350" Background="#222222" 
                    BorderBrush="#FF4500" BorderThickness="4" CornerRadius="20">

                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10"/>
                </Border.Effect>

                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Label Content="GAME OVER" 
                           Foreground="#FF4500" FontSize="45" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Label.Effect>
                            <DropShadowEffect Color="Red" BlurRadius="10"/>
                        </Label.Effect>
                    </Label>

                    <TextBlock x:Name="txtCause" Text="VOUS ÊTES MORT" 
                               Foreground="White" FontSize="18" TextAlignment="Center" 
                               TextWrapping="Wrap" Width="350" Margin="0,0,0,10"/>

                    <TextBlock x:Name="txtTemps" Text="Temps de survie : 0 s" 
                               Foreground="#FFFFC037" FontSize="22" FontWeight="Bold" 
                               TextAlignment="Center" Margin="0,0,0,30"/>

                    <Button x:Name="btnRejouer" Click="btnRejouer_Click" Content="REJOUER" 
                            Width="200" Height="40" Margin="0,5"
                            Background="#FFFFAD21" Foreground="White" 
                            FontSize="18" FontWeight="Bold" Cursor="Hand"/>

                    <Button x:Name="btnMenu" Click="btnMenu_Click" Content="MENU PRINCIPAL" 
                            Width="200" Height="40" Margin="0,5"
                            Background="#FF4444" Foreground="White" 
                            FontSize="18" FontWeight="Bold" Cursor="Hand"/>

                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>