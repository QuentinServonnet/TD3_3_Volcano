<UserControl x:Class="Volcano.UCAccueil"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/image page accueil.png"/>
        </Grid.Background>

        <Button x:Name="butjouer" Content="Jouer" Background="#FFFFAD21" Foreground="White" FontSize="30" Height="50" Width="200" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,275,100,0">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        
        <Button x:Name="butparametre" Content="Paramètre" Background="#FFFFAD21" Foreground="White" FontSize="30" Width="200" Height="50" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,360,100,0">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        
    </Grid>
</UserControl>
