<Window x:Class="Volcano.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Volcano"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/image/image page accueil.png"/>
        </Canvas.Background>
        <Button x:Name="but_jouer" Content="Jouer" Canvas.Left="299" Canvas.Top="256" Height="50" Width="202" Background="#FFFFAD21" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Click="but_jouer_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Button x:Name="but_parametre" Content="Paramètre" Canvas.Left="299" Canvas.Top="335" Height="50" Width="202" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFFFAD21" Foreground="White" Click="but_parametre_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Canvas>
</Window>
