<UserControl x:Class="Volcano.UCEchap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#AA000000">
        <Viewbox Stretch="Uniform">
            <Border Width="300" Height="250" Background="#333333" BorderBrush="#FFFFC037" BorderThickness="3" CornerRadius="15">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                    <Label Content="PAUSE" Foreground="#FFFFC037" FontSize="35" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                    <Button x:Name="btnReprendre" Click="btnReprendre_Click" Content="REPRENDRE" 
                            Width="200" Height="40" Margin="0,10"
                            Background="#FFFFAD21" Foreground="White" FontSize="18" FontWeight="Bold"/>

                    <Button x:Name="btnQuitter" Click="btnQuitter_Click" Content="QUITTER" 
                            Width="200" Height="40" Margin="0,10"
                            Background="#FF4444" Foreground="White" FontSize="18" FontWeight="Bold"/>

                </StackPanel>
            </Border>
        </Viewbox>
    </Grid>
</UserControl>