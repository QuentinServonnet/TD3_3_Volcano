<UserControl x:Class="Volcano.UCJeux"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Black">
        <Viewbox Stretch="Uniform">

            <Grid Width="800" Height="450">
                <Canvas x:Name="canvasJeu" ClipToBounds="True">

                    <Image x:Name="imgfond1" Source="/image/fond_jeu.png" 
                           Width="800" Height="450" Stretch="Fill" Canvas.Left="0"/>
                    <Image x:Name="imgfond2" Source="/image/fond_jeu.png" 
                           Width="800" Height="450" Stretch="Fill" Canvas.Left="800"/>

                    <Image x:Name="imgPerso" Source="/image/Johncourt_1.png" 
                           Width="87" Height="107" Stretch="Fill"
                           Canvas.Left="337" Canvas.Top="333"
                           RenderTransformOrigin="0.5,0.5"/>

                    <Image x:Name="img_lave" Source="/image/lave.png" 
                           Width="537" Height="302" Stretch="Fill" Canvas.Top="225" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Left="-537"/>

                    <Label x:Name="lblTemps" Content="0 s" 
                           Canvas.Left="350" Canvas.Top="10" 
                           FontSize="40" FontWeight="Bold" Foreground="White">
                    </Label>
                </Canvas>

                <local:UCPerdus x:Name="overlayPerdu" Visibility="Collapsed"/>
            </Grid>

        </Viewbox>
    </Grid>
</UserControl>