<UserControl x:Class="Volcano.UCChoixPersonnage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>


        <Label x:Name="Choix_du_personnage" Content="Choisissez votre personnage" Canvas.Left="157" Canvas.Top="44" Width="486" Height="66" FontSize="36" Foreground="#FFFFC138" FontFamily="Comic Sans MS" Margin="157,69,157,315"/>
        <Label x:Name="Prenom_John" Content="John" Canvas.Left="232" Canvas.Top="148" Foreground="#FFFFBD2C" FontSize="20" Margin="212,148,524,270" Width="50" Height="40"/>
        <Label x:Name="Prenom_Lisa" Content="Lina" Canvas.Left="532" Canvas.Top="148" Foreground="#FFFFBD2C" FontSize="20" Margin="545,140,188,270" Width="50" Height="40"/>
        <RadioButton x:Name="Lisa" Margin="470,70,100,0"  Foreground="White" Height=" 150" Width="150" >
            <RadioButton.Content>
                <Image Source="image/Lina.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <Button Content="" Canvas.Left="27" Canvas.Top="26" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="67" FontFamily="Segoe MDL2 Assets" FontWeight="Bold" FontSize="22" Height="29" Click="Button_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Content="Jouer" Canvas.Left="400" Canvas.Top="350" Margin="0,300,0,0" Width="150" Height="50" Background="#FFFFC138" FontSize="16" FontWeight="Bold" Foreground="White"/>
        <RadioButton Margin="200,200,200,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <RadioButton.Content>
                <Image Source="/image/Image_retour.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>


    </Grid>
</UserControl>
