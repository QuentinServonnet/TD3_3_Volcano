<UserControl x:Class="Volcano.UCChoixPersonnage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/image/image choix personnage.png"/>
        </Canvas.Background>

        <Label x:Name="Choix_du_personnage" Content="Choisissez votre personnage" Canvas.Left="157" Canvas.Top="44" Width="486" Height="66" FontSize="36" Foreground="#FFFFC138" FontFamily="Comic Sans MS"/>

        <Button x:Name="BtnLisa" Canvas.Left="157" Canvas.Top="154" Width="176" Height="285" Background="Transparent" BorderBrush="Transparent" Click="BtnLisa_Click">
            <Image Source="/image/Lisa.png" Stretch="Fill"/>
        </Button>

        <Button x:Name="BtnJohn" Canvas.Left="442" Canvas.Top="154" Width="176" Height="285" Background="Transparent" BorderBrush="Transparent" Click="BtnJohn_Click">
            <Image Source="/image/John.png" Stretch="Fill"/>
        </Button>
    </Canvas>
</UserControl>
