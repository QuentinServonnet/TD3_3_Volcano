<UserControl x:Class="Volcano.UCChoixPersonnage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Label x:Name="labConsigne" Content="Choix du personnage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" Foreground="White" FontSize="26" FontWeight="Bold"/>
        <Button x:Name="butjouerjeu" Content="Jouer" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" FontSize="16" Width="250" Height="50" FontWeight="Bold"/>

        <RadioButton x:Name="rbKayak" Width="150" Height="150" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0">
            <RadioButton.Content>
                <Image Source="/image/Lina.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <RadioButton x:Name="rbTraineau" Width="150" Height="150" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,100,0">
            <RadioButton.Content>
                <Image Source="/image/John2.0.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <Label Content="Lisa" HorizontalAlignment="Left" Margin="175,96,0,0" VerticalAlignment="Top"/>
        <Label Content="John" HorizontalAlignment="Left" Margin="593,96,0,0" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
