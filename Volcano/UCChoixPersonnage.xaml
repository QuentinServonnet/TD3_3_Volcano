<UserControl x:Class="Volcano.UCChoixPersonnage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Volcano"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image choix personnage.png"/>
        </Grid.Background>

        <Label x:Name="labConsigne" Content="Choix du personnage" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" Foreground="#FFFFC037" FontSize="26" FontWeight="Bold"/>
        <Button x:Name="butjouerjeu" Content="Jouer" Margin="275,334,275,66" FontSize="16" Width="250" Height="50" FontWeight="Bold" Background="#FFFFC037" Foreground="White"/>

        <RadioButton x:Name="Lina" Width="150" Height="150" Margin="100,0,500,0">
            <RadioButton.Content>
                <Image Source="/image/Lina.png" Width="150" Height="140"/>
            </RadioButton.Content>
        </RadioButton>
        <RadioButton x:Name="rbTraineau" Width="150" Height="150" Margin="450,0,0,0">
            <RadioButton.Content>
                <Image Source="/image/John2.0.png" Width="150" Height="150"/>
            </RadioButton.Content>
        </RadioButton>
        <Label Content="Lina" Margin="175,96,564,315" Foreground="#FFFFC037" FontSize="20"/>
        <Label Content="John" Margin="593,96,118,315" Foreground="#FFFFC037" FontSize="22"/>
        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnretour" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" Height="37" Width="68" FontSize="20" Foreground="White">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
